  <!-- JavaScript: Form Validation -->
  <script>
    document.getElementById("contactForm").addEventListener("submit", function (e) {
      e.preventDefault();

      const email = this.querySelector('input[type="email"]');
      const name = this.querySelector('input[placeholder="Enter your Name"]');
      const address = this.querySelector('input[placeholder="Enter your address"]');
      const message = this.querySelector('textarea');

      let isValid = true;
      let errorMsg = "";

      const emailPattern = /^[^ ]+@[^ ]+\.[a-z]{2,3}$/;

      if (!email.value.trim() || !emailPattern.test(email.value)) {
        isValid = false;
        errorMsg += "‚ö† Please enter a valid email.\n";
      }

      if (!name.value.trim()) {
        isValid = false;
        errorMsg += "‚ö† Name cannot be empty.\n";
      }

      if (!address.value.trim()) {
        isValid = false;
        errorMsg += "‚ö† Address cannot be empty.\n";
      }

      if (message.value.trim().length < 10) {
        isValid = false;
        errorMsg += "‚ö† Message should be at least 10 characters.\n";
      }

      if (isValid) {
        alert("‚úÖ Form submitted successfully!");
        this.reset();
      } else {
        alert(errorMsg);
      }
    });
  </script>
